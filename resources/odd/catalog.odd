        <encodingDesc>
            <tagsDecl>
                <pb:behaviour ident="pair" output="web">
                    <pb:param name="key"/>
                    <pb:param name="value"/>
                    <pb:template xmlns="" xml:space="preserve">
                        <div class="entry">
                            <h4>[[key]]</h4>
                            <div>[[value]]</div>
                        </div>
                    </pb:template>
